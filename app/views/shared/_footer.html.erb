<footer>
  <%= render "shared/prefooter" %>
  <section class="bg-dark text-white text-left">
    <div class="max-w-6xl mx-auto py-20 px-10 lg:px-0">
      <div class="flex flex-row flex-wrap">
        <div class="w-full md:w-2/5 p-3">
          <h3 class="font-bold text-base">GoClimateNeutral</h3>
          <p class="m-0"><%= t('views.shared.footer.short_intro') %></p>
          <ul class="list-none px-0 py-2 flex flex-row">
            <li class="mr-2">
              <%= link_to raw('<i class="fa fa-2x fa-twitter" aria-hidden="true"></i>'), 'https://twitter.com/goclimateneutrl', target: "_blank", rel: "noopener", class: 'text-white hover:text-white' %>
            </li>
            <li class="mx-2">
              <%= link_to raw('<i class="fa fa-2x fa-instagram" aria-hidden="true"></i>'), 'https://www.instagram.com/goclimateneutral/', target: "_blank", rel: "noopener", class: 'text-white hover:text-white' %>
            </li>
            <li class="mx-2">
              <%= link_to raw('<i class="fa fa-2x fa-facebook" aria-hidden="true"></i>'), 'https://www.facebook.com/GoClimateNeutral', target: "_blank", rel: "noopener", class: 'text-white hover:text-white' %>
            </li>
          </ul>
        </div>
        <div class="w-full sm:w-1/3 md:w-1/5 p-3">
          <h3 class="font-bold text-base"><%= t('views.shared.footer.headers.make_a_difference') %></h3>
          <ul class="list-none p-0">
            <li><%= link_to t('views.shared.header.sign_up'), root_url, class: 'text-white hover:text-white'%></li>
            <li><%= link_to t('navigation.gift_cards'), gift_cards_path, class: 'text-white hover:text-white' %></li>
            <li><%= link_to t('for_business'), business_path, class: 'text-white hover:text-white' %></li>
          </ul>
        </div>
        <div class="w-full sm:w-1/3 md:w-1/5 p-3">
          <h3 class="font-bold text-base"><%= t('views.shared.footer.headers.explore') %></h3>
          <ul class="list-none p-0">
          <li><%= link_to t('our_projects'), projects_path, class: 'text-white hover:text-white' %></li>
          <li><%= link_to t('blog'), "https://www.goclimateneutral.org/blog/", class: 'text-white hover:text-white' %></li>
            <li><%= link_to t('faq'), faq_path, class: 'text-white hover:text-white' %></li>
          </ul>
        </div>
        <div class="w-full sm:w-1/3 md:w-1/5 p-3">
          <h3 class="font-bold text-base"><%= t('views.shared.footer.headers.about') %></h3>
          <ul class="list-none p-0">
            <li><%= link_to t('about_us'), about_path, class: 'text-white hover:text-white' %> </li>
            <li><%= link_to t('100_percent_transparency'), transparency_path, class: 'text-white hover:text-white' %> </li>
            <li><%= link_to t('press'), press_path, class: 'text-white hover:text-white' %>  </li>
            <li><%= link_to t('views.shared.footer.jobs'), 'https://jobs.goclimateneutral.org/', class: 'text-white hover:text-white' %></li>
            <li><%= link_to t('contact_us'), contact_path, class: 'text-white hover:text-white' %></li>
          </ul>
        </div>
      </div>
      <div class="text-center">
        <div class="dropdown">
        <label for="region-choice" class="button">
          <input type="checkbox" id="region-choice">
          <%= image_tag webpack_asset_path("images/regions/#{current_region.id}.png"), class: 'inline-block' %>
          <%= current_region.name %>
          <i class="fa fa-caret-up" aria-hidden="true"></i>
          <ul class="dropdown-menu dropdown-menu-up">
            <% Region.all.filter { |r| r != current_region }.each do |region| %>
              <li>
                <a href="<%= url_for_region(region) %>">
                  <div class="w-6 inline-block"><%= image_tag webpack_asset_path("images/regions/#{region.id}.png"), class: 'inline-block' %></div> 
                  <%= region.name %>
                </a>
              </li>
            <% end %>
            <li>
              <a href="<%= url_for_region(Region::Europe) %>">
              <div class="w-6 inline-block"><%= image_tag webpack_asset_path("images/regions/world.png"), class: 'inline-block' %></div> 
                Rest of the World
              </a>
            </li>
          </ul>
        </label>
        </div>
        <p class="py-2 text-sm">Â© <%= Time.current.year %> GoClimateNeutral</p>
      </div>
    </div>
  </section>
</footer>
